<%= content_for :page_title, @post.title %>

<h2><%= @post.title %></h2>

<p>
  <%= raw render_markdown @post.body %>
</p>

<p>
  <small>Created</small>
  <small><%= time_ago_in_words @post.created_at %> ago</small>
</p>

<p>
  <small>Updated</small>
  <small><%= time_ago_in_words @post.updated_at %> ago</small>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
