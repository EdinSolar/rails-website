<%= content_for :page_title, @post.title %>

<h2><%= @post.title %></h2>

<p>
  <%= raw render_markdown @post.body %>
</p>

<p class="small">Created <%= time_ago_in_words @post.created_at %> ago</p>
<p class="small">Updated <%= time_ago_in_words @post.updated_at %> ago</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
